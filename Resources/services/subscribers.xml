<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="paypal_unified.subscriber.controller.backend" class="SwagPaymentPayPalUnified\Subscriber\ControllerRegistration\Backend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.controller.frontend" class="SwagPaymentPayPalUnified\Subscriber\ControllerRegistration\Frontend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.controller.widgets" class="SwagPaymentPayPalUnified\Subscriber\ControllerRegistration\Widgets">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.less" class="SwagPaymentPayPalUnified\Subscriber\Less">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.checkout" class="SwagPaymentPayPalUnified\Subscriber\Checkout">
            <argument type="service" id="service_container"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.backend" class="SwagPaymentPayPalUnified\Subscriber\Backend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.frontend" class="SwagPaymentPayPalUnified\Subscriber\Frontend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <argument type="service" id="paypal_unified.settings_service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.payment_means" class="SwagPaymentPayPalUnified\Subscriber\PaymentMeans">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="paypal_unified.settings_service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.installments" class="SwagPaymentPayPalUnified\Subscriber\Installments">
            <argument type="service" id="paypal_unified.settings_service"/>
            <argument type="service" id="paypal_unified.installments.validation_service"/>
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.backend_order" class="SwagPaymentPayPalUnified\Subscriber\BackendOrder">
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.documents.invoice" class="SwagPaymentPayPalUnified\Subscriber\Documents\Invoice">
            <argument type="service" id="paypal_unified.payment_instruction_service"/>
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.documents.installments" class="SwagPaymentPayPalUnified\Subscriber\Documents\Installments">
            <argument type="service" id="paypal_unified.installments.order_credit_info_service"/>
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="paypal_unified.subscriber.express_checkout" class="SwagPaymentPayPalUnified\Subscriber\ExpressCheckout">
            <argument type="service" id="paypal_unified.settings_service"/>
            <argument type="service" id="session"/>
            <argument type="service" id="paypal_unified.payment_resource"/>
            <argument type="service" id="paypal_unified.shipping_address_request_service"/>
            <argument type="service" id="paypal_unified.payment_request_service"/>
            <argument type="service" id="pluginlogger"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
