<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Services -->
        <service id="paypal_unified.client_service" class="SwagPaymentPayPalUnified\PayPalBundle\Services\ClientService">
            <argument type="service" id="paypal_unified.settings_service" />
            <argument type="service" id="paypal_unified.token_service" />
            <argument type="service" id="pluginlogger" />
            <argument type="service" id="guzzle_http_client_factory" />
            <argument type="service" id="paypal_unified.partner_attribution_service" />
            <argument type="service" id="paypal_unified.dependency_provider"/>
        </service>

        <service id="paypal_unified.token_service" class="SwagPaymentPayPalUnified\PayPalBundle\Services\TokenService">
            <argument type="service" id="shopware.cache_manager" />
            <argument type="service" id="pluginlogger" />
        </service>

        <service id="paypal_unified.order_data_service" class="SwagPaymentPayPalUnified\Components\Services\OrderDataService">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="paypal_unified.settings_service" />
        </service>

        <service id="paypal_unified.dependency_provider" class="SwagPaymentPayPalUnified\Components\DependencyProvider">
            <argument type="service" id="service_container" />
        </service>

        <service id="paypal_unified.web_profile_service" class="SwagPaymentPayPalUnified\PayPalBundle\Services\WebProfileService">
            <argument type="service" id="paypal_unified.client_service" />
            <argument type="service" id="paypal_unified.settings_service" />
            <argument type="service" id="paypal_unified.dependency_provider" />
            <argument type="service" id="pluginlogger" />
        </service>

        <service id="paypal_unified.webhook_service" class="SwagPaymentPayPalUnified\PayPalBundle\Services\WebhookService" />

        <service id="paypal_unified.basket_service" class="SwagPaymentPayPalUnified\Components\Services\BasketService">
            <argument type="service" id="router" />
            <argument type="service" id="paypal_unified.settings_service" />
        </service>

        <service id="paypal_unified.partner_attribution_service" class="SwagPaymentPayPalUnified\PayPalBundle\Services\PartnerAttributionService">
            <argument type="service" id="paypal_unified.settings_service" />
        </service>

        <service id="paypal_unified.transaction_history_builder_service" class="SwagPaymentPayPalUnified\Components\Services\TransactionHistoryBuilderService"/>

        <service id="paypal_unified.payment_instruction_service" class="SwagPaymentPayPalUnified\Components\Services\PaymentInstructionService">
            <argument type="service" id="models" />
        </service>

        <service id="paypal_unified.payment_address_patch_service" class="SwagPaymentPayPalUnified\Components\Services\PaymentAddressPatchService">
            <argument type="service" id="models" />
        </service>

        <service id="paypal_unified.document_template_service" class="SwagPaymentPayPalUnified\Components\Services\DocumentTemplateService">
            <argument type="service" id="dbal_connection" />
        </service>

        <service id="paypal_unified.settings_service" class="SwagPaymentPayPalUnified\Components\Services\SettingsService">
            <argument type="service" id="models" />
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="paypal_unified.dependency_provider"/>
        </service>

        <!-- Resources -->
        <service id="paypal_unified.payment_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\PaymentResource">
            <argument type="service" id="paypal_unified.client_service" />
            <argument type="service" id="paypal_unified.web_profile_service" />
            <argument type="service" id="paypal_unified.basket_service" />
        </service>

        <service id="paypal_unified.sale_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\SaleResource">
            <argument type="service" id="paypal_unified.client_service" />
        </service>

        <service id="paypal_unified.refund_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\RefundResource">
            <argument type="service" id="paypal_unified.client_service" />
        </service>

        <service id="paypal_unified.authorization_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\AuthorizationResource">
            <argument type="service" id="paypal_unified.client_service" />
        </service>

        <service id="paypal_unified.capture_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\CaptureResource">
            <argument type="service" id="paypal_unified.client_service" />
        </service>

        <service id="paypal_unified.order_resource" class="SwagPaymentPayPalUnified\PayPalBundle\Resources\OrderResource">
            <argument type="service" id="paypal_unified.client_service" />
        </service>

        <!-- Subscribers -->
        <service id="paypal_unified.subscriber.controller.backend" class="SwagPaymentPayPalUnified\Subscriber\ControllerRegistration\Backend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <argument type="service" id="template" />
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.controller.frontend" class="SwagPaymentPayPalUnified\Subscriber\ControllerRegistration\Frontend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.less" class="SwagPaymentPayPalUnified\Subscriber\Less">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.checkout" class="SwagPaymentPayPalUnified\Subscriber\Checkout">
            <argument type="service" id="service_container" />
            <argument type="service" id="paypal_unified.settings_service" />
            <argument type="service" id="paypal_unified.dependency_provider" />
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.backend" class="SwagPaymentPayPalUnified\Subscriber\Backend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.frontend" class="SwagPaymentPayPalUnified\Subscriber\Frontend">
            <argument>%paypal_unified.plugin_dir%</argument>
            <argument type="service" id="paypal_unified.settings_service" />
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.document" class="SwagPaymentPayPalUnified\Subscriber\Document">
            <argument type="service" id="paypal_unified.payment_instruction_service" />
            <argument type="service" id="paypal_unified.document_template_service" />
            <argument type="service" id="models" />
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="paypal_unified.subscriber.payment_means" class="SwagPaymentPayPalUnified\Subscriber\PaymentMeans">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="paypal_unified.settings_service"/>
            <tag name="shopware.event_subscriber" />
        </service>

    </services>
</container>